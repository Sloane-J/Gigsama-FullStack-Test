---
import AudioRecorder from "../components/AudioRecorder";
import TranscriptDisplay from "../components/TranscriptDisplay";
import BibleVerseCard from "../components/BibleVerseCard";
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VerseCatch - AI Bible Quotation</title>
</head>
<body class="bg-gray-100 flex justify-center items-center min-h-screen">
    <main class="w-full max-w-2xl text-center p-6">
        <h1 class="text-xl font-semibold mb-6">VerseCatch</h1>
        
        <!-- Audio Recorder Button -->
        <section class="flex justify-center gap-4 mb-6">
            <AudioRecorder />
        </section>
        
        <!-- Transcription Section -->
        <section class="bg-white rounded-xl p-4 shadow-md mb-6">
            <TranscriptDisplay />
        </section>

        <!-- Bible Verse Display -->
        <section class="space-y-4">
            <BibleVerseCard verse="John 3:16" version="KJV" text="For God so loved the world, that he gave his only begotten Son..." />
            <BibleVerseCard verse="Matthew 11:28" version="NIV" text="Come to me, all you who are weary and burdened, and I will give you rest." />
        </section>
    </main>
</body>
</html>
